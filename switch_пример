#include <iostream>
using namespace std;

int main()
{
  int x; // Объявление переменной для хранения номера дня недели
  
  cin >> x; // Ввод номера дня недели от пользователя
  
  switch (x) // Оператор выбора на основе значения x
  {
     case 1: 
        cout << "понедельник"; // Вывод для понедельника
        break; // Выход из switch
         
     case 2: 
        cout << "вторник"; // Вывод для вторника
        break; // Выход из switch
         
     case 3:  
        cout << "среда"; // Вывод для среды
        break; // Выход из switch
         
     case 4:  
        cout << "четверг"; // Вывод для четверга
        break; // Выход из switch
         
     case 5:  
        cout << "пятница"; // Вывод для пятницы
        break; // Выход из switch
         
     case 6:  
        cout << "суббота"; // Вывод для субботы
        break; // Выход из switch
         
     case 7:  
        cout << "воскресенье"; // Вывод для воскресенья
        break; // Выход из switch
         
     default: 
        cout << "вы ошиблись"; // Вывод при неверном вводе (не 1-7)
        // break не нужен, так как default обычно последний
  }
  
  return 0; // Завершение программы
}
