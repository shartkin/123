#include<iostream>      // Подключение библиотеки для ввода/вывода
#include<iomanip>       // Подключение библиотеки для манипуляторов форматирования
using namespace std;    // Использование стандартного пространства имен

int main()
{
   // 1. Вывод с установкой ширины поля
   cout << "1." << setw(10) << -23.4567 << endl;
   
   // 2. Вывод с установкой ширины поля и точности
   cout << "2." << setw(10) << setprecision(3) << -23.4567 << endl;
   
   // 3. Вывод с внутренним выравниванием (знак слева, число справа)
   cout << "3." << setw(10) << internal << -23.4567 << endl;
   
   return 0; // Завершение программы
}
