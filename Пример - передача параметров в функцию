#include<iostream>  // Подключение библиотеки для ввода/вывода
using namespace std; // Использование стандартного пространства имен

// Определение функции f с тремя параметрами:
// a - передача по значению
// b - передача по указателю
// c - передача по ссылке
void f(int a, int *b, int &c)
{
  a += 10;        // Изменяется локальная копия (не влияет на x в main)
  (*b) += 10;     // Разыменование указателя - изменяется значение y в main
  c += 10;        // Изменяется непосредственно переменная z в main
  cout << "f:\t" << a << "\t" << *b << "\t" << c << endl;
}

int main()
{
  int x = 10, y = 20, z = 30;
  cout << "main:\t" << x << "\t" << y << "\t" << z << endl;
  f(x, &y, z);    // Вызов функции f:
                  // x - передача по значению (копия)
                  // &y - передача указателя на y
                  // z - передача по ссылке
  cout << "main:\t" << x << "\t" << y << "\t" << z << endl;
  return 0;
}
