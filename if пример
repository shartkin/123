#include<iostream>      // Подключение библиотеки для ввода/вывода
#include <cmath>        // Подключение библиотеки для математических функций (sqrt)
using namespace std;    // Использование стандартного пространства имен

int main()
{
   float x, y;          // Объявление переменных для аргумента и значения функции
   
   cout << "x : = ";    // Вывод приглашения для ввода x
   cin >> x;            // Ввод значения x с клавиатуры
   
   // Проверка области определения функции
   // Условие: если x = 0 ИЛИ x < -1, то функция не определена
   if (!x || x < -1)
    cout << "функция не определена "<< endl;  // Сообщение об ошибке
   else {
        // Вычисление значения функции y = 1/x + sqrt(x + 1)
        y = 1/x + sqrt(x + 1);
        
        // Вывод результата: значения x и вычисленного y
        cout << "x = " << x << "\t" << "y = " << y << endl;
    
    return 0;  // Завершение программы с кодом 0 (успешное выполнение)
   }
}
