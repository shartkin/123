#include<iostream>
using namespace std;
int a; // Глобальная переменная

int main()
{
    int b; // Локальная переменная
    extern int x; // Объявление внешней переменной
    static int c; // Статическая локальная переменная (исправлено - добавлен тип int)
    
    a = 1; // Присваивание глобальной переменной
    int a; // Локальная переменная (скрывает глобальную)
    a = 2; // Присваивание локальной переменной
    ::a = 3; // Присваивание глобальной переменной через оператор области видимости
    
    return 0;
}

int x = 4; // Определение внешней переменной
