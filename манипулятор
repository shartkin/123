#include<iostream>      // Подключение библиотеки для ввода/вывода
#include<iomanip>       // Подключение библиотеки для манипуляторов форматирования

using namespace std;    // Использование стандартного пространства имен

int main()
{
   double i = 12345.6789;  // Объявление и инициализация вещественной переменной
   
   // Установка точности в 3 знака (общее количество знаков)
   cout << setprecision(3) << i << endl;
   
   // Установка точности в 6 знаков (общее количество знаков)
   cout << setprecision(6) << i << endl;
   
   // Установка точности в 9 знаков (общее количество знаков)
   cout << setprecision(9) << i << endl;
   
   return 0; // Завершение программы
}
