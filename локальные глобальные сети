#include<iostream>
using namespace std;

// Глобальные переменные
int a = 100, b = 20;

// Функция f1 - принимает параметр a (локальный параметр скрывает глобальную a)
void f1(int a)
{
    a += 10;  // Изменяется локальный параметр a, а не глобальная a
    cout << "f1:\t" << a << "\t" << ::a << endl;  // ::a - обращение к глобальной a
}

// Функция f2 - принимает параметр b (локальный параметр скрывает глобальную b)
void f2(int b)
{
    b *= 2;   // Изменяется локальный параметр b, а не глобальная b
    cout << "f2\t" << b << "\t" << a << endl;  // ОШИБКА: "/t" вместо "\t", используется глобальная a
}

int main(){
    cout << "main:\t" << a << "\t" << b << endl;  // Вывод глобальных переменных
    f1(a);  // Передача копии глобальной a в функцию f1
    f2(b);  // Передача копии глобальной b в функцию f2
    cout << "main\t" << a << "\t" << b << endl;  // Глобальные переменные не изменились
    return 0;
}
