#include<iostream>  
using namespace std; 

int main()
{
    // Объявление и инициализация переменных
    int x = 3, y = 0;          // x = 3, y = 0
    bool f = false, v = true;  // f = false (0), v = true (1)
    
    // Вывод унарных операторов для x
    cout << -x << "\t" << !x << endl;  // -3 и логическое отрицание 3
    
    // Вывод унарных операторов для y  
    cout << -y << "\t" << !y << endl;  // 0 и логическое отрицание 0
    
    // Вывод унарных операторов для f
    cout << f << "\t" << !f << endl;   // 0 и логическое отрицание false
    
    // Вывод унарных операторов для v
    cout << v << "\t" << !v << endl;   // 1 и логическое отрицание true
    
    return 0; // Завершение программы
}
